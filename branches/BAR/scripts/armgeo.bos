GeoSmoke()
{
	while( TRUE )
	{
		if (smoker==0){ //no smoke, dont emit.

		}
		if (smoker==1){ //leftsmoke
			emit-sfx 257 from smoke1;
			emit-sfx 257 from smoke3;

		}
		if (smoker==2){ //rightsmoke
			emit-sfx 257 from smoke2;
			emit-sfx 257 from smoke4;

		}
		if (smoker==3){ //bothsmoke
			emit-sfx 257 from smoke1;
			emit-sfx 257 from smoke2;
			emit-sfx 257 from smoke3;
			emit-sfx 257 from smoke4;

		}

		sleep 250;
	}
}


SmokeUnit(healthpercent, sleeptime, smoketype)
{
	while( get BUILD_PERCENT_LEFT )
	{
		sleep 400;
	}
	
	start-script Activate();
	start-script GeoSmoke();
	while( TRUE )
	{
		healthpercent = get HEALTH;
		if( healthpercent < 66 )
		{
			smoketype = 256 | 2;
			if( Rand( 1, 66 ) < healthpercent )
			{
				smoketype = 256 | 1;
			}
			emit-sfx smoketype from base;
		}
		sleeptime = healthpercent * 50;
		if( sleeptime < 200 )
		{
			sleeptime = 200;
		}
		sleep sleeptime;
	}
}
Create()
{
	smoker=0;
	start-script SmokeUnit();
}

SweetSpot(piecenum)
{
	piecenum = base;
}

Killed(severity, corpsetype)
{
	if( severity <= 25 )
	{
		corpsetype = 1;
		explode base type BITMAPONLY | BITMAP1;
	}
	if( severity <= 50 )
	{
		corpsetype = 2;
		explode base type BITMAPONLY | BITMAP1;
		return (0);
	}
	if( severity <= 99 )
	{
		corpsetype = 3;
		explode base type BITMAPONLY | BITMAP1;
		return (0);
	}
	corpsetype = 3;
	explode base type BITMAPONLY | BITMAP1;
}
