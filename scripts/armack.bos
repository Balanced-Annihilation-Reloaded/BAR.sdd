Killed(severity, corpsetype)
{
	if( severity <= 25 )
	{
		corpsetype = 1 ;
		explode pelvis type BITMAPONLY;
		explode rthigh type BITMAPONLY;
		explode rleg type BITMAPONLY;
		explode rfoot type FIRE | SMOKE | FALL;
		explode lthigh type BITMAPONLY;
		explode lleg type BITMAPONLY;
		explode lfoot type BITMAPONLY;
		explode torso type BITMAPONLY;
		explode cover type BITMAPONLY;
		explode gun type BITMAPONLY;
		explode nano type BITMAPONLY;
		return(corpsetype);
	}
	if( severity <= 50 )
	{
		corpsetype = 2 ;
		explode pelvis type BITMAPONLY;
		explode rthigh type FALL;
		explode rleg type FALL;
		explode rfoot type FIRE | SMOKE | FALL;
		explode lthigh type FIRE | SMOKE | FALL;
		explode lleg type FALL;
		explode lfoot type FALL;
		explode torso type FIRE | SMOKE | FALL;
		explode cover type FALL;
		explode gun type FIRE | SMOKE | FALL;
		explode nano type FIRE | SMOKE | FALL;
		return(corpsetype);
	}
	if( severity <= 99 )
	{
		corpsetype = 3 ;
		explode pelvis type FIRE | SMOKE | FALL;
		explode rthigh type SHATTER;
		explode rleg type SMOKE | FALL;
		explode rfoot type SMOKE | FALL;
		explode lthigh type SHATTER;
		explode lleg type EXPLODE_ON_HIT | SMOKE | FALL;
		explode lfoot type EXPLODE_ON_HIT | FIRE | SMOKE | FALL;
		explode torso type FIRE | SMOKE | FALL;
		explode cover type EXPLODE_ON_HIT | FIRE | SMOKE | FALL;
		explode gun type SMOKE | FALL;
		explode nano type EXPLODE_ON_HIT | SMOKE | FALL;
		return(corpsetype);
	}
	corpsetype = 3 ;
		explode pelvis type EXPLODE_ON_HIT | FIRE | SMOKE | FALL;
		explode rthigh type SHATTER;
		explode rleg type EXPLODE_ON_HIT | FIRE | FALL;
		explode rfoot type EXPLODE_ON_HIT | FIRE | FALL;
		explode lthigh type SHATTER;
		explode lleg type EXPLODE_ON_HIT | FIRE | SMOKE | FALL;
		explode lfoot type EXPLODE_ON_HIT | FIRE | SMOKE | FALL;
		explode torso type EXPLODE_ON_HIT | FIRE | SMOKE | FALL;
		explode cover type EXPLODE_ON_HIT | FIRE | SMOKE | FALL;
		explode gun type EXPLODE_ON_HIT | FIRE | SMOKE | FALL;
		explode nano type EXPLODE_ON_HIT | FIRE | FALL;
	return corpsetype;
}
