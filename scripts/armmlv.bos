SweetSpot(piecenum)
{
	piecenum = base;
}

AimPrimary(heading, pitch)
{
	while( !gun_2 )
	{
		sleep 250;
	}
	return (1);
}

FirePrimary()
{
	gun_2 = base;
	sleep 3000;
	gun_2 = nano;
}

QueryPrimary(piecenum)
{
	piecenum = turret;
}

AimFromPrimary(piecenum)
{
	piecenum = base;
}

AimSecondary(heading, pitch)
{
	while( !gun_2 )
	{
		sleep 250;
	}
	return (1);
}

FireSecondary()
{
	gun_2 = base;
	sleep 3000;
	gun_2 = nano;
}

QuerySecondary(piecenum)
{
	piecenum = base;
}

AimFromSecondary(piecenum)
{
	piecenum = base;
}

Killed(severity, corpsetype)
{
	if( severity <= 25 )
	{
		corpsetype = 1 ;
		explode base type BITMAPONLY;
		explode turret type FIRE | SMOKE | FALL;
		explode nano type BITMAPONLY;
		explode lbwheel type BITMAPONLY;
		explode rfwheel type BITMAPONLY;
		explode lfwheel type BITMAPONLY;
		explode rbwheel type BITMAPONLY;
		return(0);
	}
	if( severity <= 50 )
	{
		corpsetype = 2 ;
		explode base type BITMAPONLY;
		explode turret type FIRE | SMOKE | FALL;
		explode nano type FALL;
		explode lbwheel type FIRE | SMOKE | FALL;
		explode rfwheel type FALL;
		explode lfwheel type FALL;
		explode rbwheel type FIRE | SMOKE | FALL;
		return(0);
	}
	if( severity <= 99 )
	{
		corpsetype = 3 ;
		explode base type FIRE | SMOKE | FALL;
		explode turret type EXPLODE_ON_HIT | SMOKE | FALL;
		explode nano type EXPLODE_ON_HIT | FIRE | SMOKE | FALL;
		explode lbwheel type EXPLODE_ON_HIT | FIRE | SMOKE | FALL;
		explode rfwheel type EXPLODE_ON_HIT | FIRE | SMOKE | FALL;
		explode lfwheel type EXPLODE_ON_HIT | FIRE | SMOKE | FALL;
		explode rbwheel type FIRE | SMOKE | FALL;
		return(0);
	}
	corpsetype = 3 ;
		explode base type EXPLODE_ON_HIT | FIRE | SMOKE | FALL;
		explode turret type EXPLODE_ON_HIT | FIRE | FALL;
		explode nano type EXPLODE_ON_HIT | FIRE | SMOKE | FALL;
		explode lbwheel type EXPLODE_ON_HIT | FIRE | FALL;
		explode rfwheel type EXPLODE_ON_HIT | FIRE | SMOKE | FALL;
		explode lfwheel type EXPLODE_ON_HIT | FIRE | FALL;
		explode rbwheel type EXPLODE_ON_HIT | FIRE | FALL;
}
