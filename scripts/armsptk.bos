Create()
{
	hide flare1;
	hide flare2;
	hide flare3;
	turn leg6a to y-axis <55> now;
	turn leg4a to y-axis <-45> now;
	turn leg1a to y-axis <-55> now;//2
	turn leg3a to y-axis <45> now;//5
	turn leg6b to z-axis <-10> now;
	turn leg6c to z-axis <20> now;
	turn leg1b to z-axis <10> now;
	turn leg1c to z-axis <-20> now;
	turn leg3b to z-axis <10> now;
	turn leg3c to z-axis <-20> now;
	turn leg1b to z-axis <-10> now;
	turn leg1c to z-axis <20> now;
	fire_count=4;
	maxreloadtime=0;
	open=FALSE;
	firing=FALSE;
	while(get BUILD_PERCENT_LEFT)
	{
		sleep 250;
	}
	start-script SmokeUnit();
	start-script DoTheWalking();
	
	moveSpeed = (get MAX_SPEED);
	WALK_PERIOD=100;
	start-script UnitSpeed();
	restore_delay=2000;
}

SetMaxReloadTime(t)
{
	restore_delay=5000;
}


FirePrimary()
{
	signal SIG_FIRE1;
	set-signal-mask SIG_FIRE1;
	++fire_count;
	if(fire_count>=3)
	{
		fire_count=0;
	}
	sleep 1;
	return(1);
	
}

Shot1()
{
	if(fire_count==0)
	{
		emit-sfx 1024+0 from flare1;	
	}
	if(fire_count==1)
	{
		emit-sfx 1024+0 from flare2;
	}
	if(fire_count==2)
	{
		emit-sfx 1024+0 from flare3;
	}
}

QueryPrimary(piecenum)
{
	if(fire_count==0)
	{
		piecenum=flare1;	
	}
	if(fire_count==1)
	{
		piecenum=flare2;
	}
	if(fire_count==2)
