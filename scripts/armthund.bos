{
	if( severity <= 25 )
	{
		corpsetype = 1 ;
		explode base type BITMAPONLY;
		explode enginec type FIRE | SMOKE | FALL;
		explode thrustc type BITMAPONLY;
		explode doorr type BITMAPONLY;
		explode doorl type BITMAPONLY;
		explode wingl type BITMAPONLY;
		explode wingr type BITMAPONLY;
		explode engines type BITMAPONLY;
		explode thrust1 type BITMAPONLY;
		explode thrust2 type BITMAPONLY;
		explode thrust3 type BITMAPONLY;
		explode thrust4 type BITMAPONLY;
		return(corpsetype);
	}
	if( severity <= 50 )
	{
		corpsetype = 2 ;
		explode base type BITMAPONLY;
		explode enginec type FALL;
		explode thrustc type FIRE | SMOKE | FALL;
		explode doorr type FALL;
		explode doorl type FIRE | SMOKE | FALL;
		explode wingl type FIRE | SMOKE | FALL;
