		explode engines type FIRE | SMOKE | FALL;
		explode thrust1 type FALL;
		explode thrust2 type FIRE | SMOKE | FALL;
		explode thrust3 type FIRE | SMOKE | FALL;
		explode thrust4 type FALL;
		return(corpsetype);
	}
	if( severity <= 99 )
	{
		corpsetype = 3 ;
		explode base type BITMAPONLY;
		explode enginec type SMOKE | FALL;
		explode thrustc type SMOKE | FALL;
		explode doorr type SHATTER;
		explode doorl type SHATTER;
		explode wingl type FIRE | SMOKE | FALL;
		explode wingr type EXPLODE_ON_HIT | SMOKE | FALL;
		explode engines type FIRE | SMOKE | FALL;
		explode thrust1 type EXPLODE_ON_HIT | FIRE | SMOKE | FALL;
		explode thrust2 type SMOKE | FALL;
		explode thrust3 type EXPLODE_ON_HIT | SMOKE | FALL;
		explode thrust4 type EXPLODE_ON_HIT | SMOKE | FALL;
		return(corpsetype);
	}
	corpsetype = 3 ;
		explode base type BITMAPONLY;
		explode enginec type EXPLODE_ON_HIT | FIRE | FALL;
		explode thrustc type EXPLODE_ON_HIT | FIRE | SMOKE | FALL;
		explode doorr type SHATTER;
		explode doorl type SHATTER;
		explode wingl type EXPLODE_ON_HIT | FIRE | SMOKE | FALL;
		explode wingr type EXPLODE_ON_HIT | FIRE | FALL;
		explode engines type EXPLODE_ON_HIT | FIRE | SMOKE | FALL;
		explode thrust1 type EXPLODE_ON_HIT | FIRE | FALL;
		explode thrust2 type EXPLODE_ON_HIT | FIRE | SMOKE | FALL;
		explode thrust3 type EXPLODE_ON_HIT | FIRE | SMOKE | FALL;
		explode thrust4 type EXPLODE_ON_HIT | FIRE | SMOKE | FALL;
	return corpsetype;
}
