	{
		corpsetype = 1 ;
		explode base type BITMAPONLY;
		explode fan type FIRE | SMOKE | FALL;
		return(corpsetype);
	}
	if( severity <= 50 )
	{
		corpsetype = 2 ;
		explode base type BITMAPONLY;
		explode fan type FIRE | SMOKE | FALL;
		return(corpsetype);
	}
